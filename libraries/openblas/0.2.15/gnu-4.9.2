#%Module -*- tcl -*-
##
## modulefile
##

proc ModulesHelp { } {
  puts stderr "\tAdds OpenBLAS 0.2.15 for GCC 4.9.2 compilers to your environment variables."
}

module-whatis "adds OpenBLAS 0.2.15 for GCC 4.9.2 compilers to your environment variables"

conflict atlas
conflict openblas
prereq gcc-libs/4.9.2

set              root              /shared/ucl/apps/openblas/0.2.15/gnu-4.9.2

prepend-path     PATH              $root/bin
prepend-path     MANPATH           $root/share/man
prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LIBRARY_PATH      $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib
prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include
setenv 		 BLAS_TAG	   openblas
setenv		 OPENBLASROOT      $root
setenv		 BLAS      $root/include

prepend-path CMAKE_PREFIX_PATH  $root
